{
  "openapi": "3.0.0",
  "info": {
    "title": "App Citas Médicas",
    "description": "Documentation for the API Gateway in nest",
    "version": "1.0"
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "Users can Sign In with Email and Password"
    },
    {
      "name": "Users",
      "description": "Admin Users Only, CRUD for User Entities"
    },
    {
      "name": "Doctors",
      "description": "Doctor Users Only, get dates and patients history"
    },
    {
      "name": "Patients",
      "description": "Patient Users Only, get available appointments, today appointments, and book an appointment"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:9000/api/v1",
      "description": "Api Gateway"
    },
    {
      "url": "http://localhost:8001/",
      "description": "Users Service"
    },
    {
      "url": "http://localhost:8002/",
      "description": "Patients Service"
    },
    {
      "url": "http://localhost:8003/",
      "description": "Doctors Service"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "description": "Sign In",
        "operationId": "signIn",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User signed in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenDto"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "description": "Get all users",
        "operationId": "getAllUsers",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Users retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessageUserDtoArray"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a user",
        "operationId": "createUser",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessageUserDto"
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "description": "Get user by ID",
        "operationId": "getUserById",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessageUserDto"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Update user by ID",
        "operationId": "updateUser",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ModifyUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessageUserDto"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Delete user by ID",
        "operationId": "deleteUser",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessage"
                }
              }
            }
          }
        }
      }
    },
    "/users/check": {
      "post": {
        "description": "Check user credentials",
        "operationId": "checkCredentials",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User credentials are correct",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InfoMessageUserDto"
                }
              }
            }
          }
        }
      }
    },
    "/doctors/dates": {
      "get": {
        "description": "Get doctor dates.",
        "parameters": [
          {
            "name": "doctorId",
            "in": "header",
            "description": "ID del doctor",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
          "Doctors"
        ],
        "responses": {
          "200": {
            "description": "Lista de citas devuelta correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AppointmentResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/doctors/history/{patientId}": {
      "get": {
        "description": "Get history by patient ID",
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "description": "ID del paciente",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "doctorId",
            "in": "header",
            "description": "ID del doctor",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
          "Doctors"
        ],
        "responses": {
          "200": {
            "description": "Lista de citas pasadas devuelta correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AppointmentResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/patients/appointments/available": {
      "get": {
        "description": "Get available schedule.",
        "tags": [
          "Patients"
        ],
        "parameters": [
          {
            "name": "speciality",
            "in": "query",
            "description": "Especialidad para filtrar horarios (opcional)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de horarios devuelta correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ScheduleResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/patients/appointments": {
      "get": {
        "description": "Get today Appointments.",
        "tags": [
          "Patients"
        ],
        "parameters": [
          {
            "name": "patientId",
            "in": "header",
            "description": "ID del paciente",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de citas devuelta correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AppointmentResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Book an appointment.",
        "tags": [
          "Patients"
        ],
        "parameters": [
          {
            "name": "patientId",
            "in": "header",
            "description": "ID del paciente",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Detalles de la cita a reservar",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppointmentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cita reservada correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppointmentResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "TokenDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "jwt": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "jwt"
        ]
      },
      "InfoMessageUserDtoArray": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserDto"
            }
          }
        },
        "required": [
          "message",
          "data"
        ]
      },
      "InfoMessageUserDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/UserDto"
          }
        },
        "required": [
          "message",
          "data"
        ]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "fullName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phoneNum": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        },
        "required": [
          "userId",
          "fullName",
          "email",
          "phoneNum",
          "role"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "fullname": {
            "type": "string",
            "minLength": 4
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8
          },
          "phoneNum": {
            "type": "string",
            "format": "phone-number"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "DOCTOR",
              "PATIENT"
            ]
          }
        },
        "required": [
          "fullname",
          "email",
          "password",
          "role"
        ]
      },
      "ModifyUserDto": {
        "type": "object",
        "properties": {
          "fullname": {
            "type": "string",
            "minLength": 4
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8
          },
          "phoneNum": {
            "type": "string",
            "format": "phone-number"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "DOCTOR",
              "PATIENT"
            ]
          }
        }
      },
      "InfoMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": [
          "message"
        ]
      },
      "AppointmentResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID de la cita"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de la cita"
          },
          "idPatient": {
            "type": "string",
            "description": "ID del paciente"
          },
          "schedule_selected": {
            "type": "integer",
            "description": "ID del horario seleccionado"
          }
        },
        "required": [
          "id",
          "date",
          "idPatient",
          "schedule_selected"
        ]
      },
      "AppointmentRequest": {
        "type": "object",
        "properties": {
          "idPatient": {
            "type": "string",
            "description": "ID del paciente"
          },
          "idSchedule": {
            "type": "integer",
            "format": "int64",
            "description": "ID del horario seleccionado"
          },
          "optionSelected": {
            "type": "integer",
            "description": "Opción seleccionada (si aplica)"
          }
        },
        "required": [
          "idPatient",
          "idSchedule"
        ]
      },
      "ScheduleResponse": {
        "type": "object",
        "properties": {
          "scheduleId": {
            "type": "integer",
            "format": "int64",
            "description": "ID del horario"
          },
          "doctorId": {
            "type": "string",
            "description": "ID del doctor"
          },
          "options": {
            "type": "string",
            "description": "Opciones (detalles adicionales)"
          },
          "speciality": {
            "type": "string",
            "description": "Especialidad del doctor"
          }
        },
        "required": [
          "scheduleId",
          "doctorId",
          "speciality"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}